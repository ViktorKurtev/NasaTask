                                <th>Nasa Jpl Url</th>
                                <th>Is Potentially Hazardous</th>
                                <th>Close Approach Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var asteroid in Model)
                            {
                                <partial name="_AsteroidPartial" model="asteroid" />
                            }
                        </tbody>
                    </table>

                </div>
